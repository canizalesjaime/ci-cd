{
    "name": "Docker-Workshop",
    
    "build" : {
        "dockerfile": "./Dockerfile"
    },

    "forwardPorts": [3000],
    
    "containerEnv": {
        "DISPLAY": "host.docker.internal:0.0",
        "LIBGL_ALWAYS_INDIRECT": "0"
      },
      
      "runArgs":["--net=host"],

    "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind",
    "workspaceFolder" : "/workspace"
}